<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="root" minHeight="740.0" minWidth="1244.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.LoginController">
   <children>
      <AnchorPane fx:id="subroot" styleClass="background" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
         <children>
            <VBox fx:id="signUpVBox" alignment="CENTER" layoutX="438.0" layoutY="130.0" maxHeight="440.0" style="-fx-background-color: #1c1c1cba; -fx-background-radius: 7px;">
               <children>
                  <Label text="Đăng ký" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="40.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <FontAwesomeIconView fill="WHITE" glyphName="USER" size="2.3em">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </FontAwesomeIconView>
                        <JFXTextField fx:id="usernameSignUpJFX" focusColor="WHITE" labelFloat="true" prefWidth="250.0" promptText="Tên tài khoản" styleClass="jfx-text-field" unFocusColor="WHITE">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </JFXTextField>
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <FontAwesomeIconView fill="WHITE" glyphName="KEY" size="2.3em">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </FontAwesomeIconView>
                        <JFXPasswordField fx:id="passwordSignUpJFX" prefWidth="250.0" promptText="Mật khẩu" styleClass="jfx-password-field" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <FontAwesomeIconView fill="WHITE" glyphName="CHECK_CIRCLE" size="2.3em">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </FontAwesomeIconView>
                        <JFXPasswordField fx:id="confirmPassSignUpJFX" prefWidth="250.0" promptText="Xác nhận lại mật khẩu" styleClass="jfx-password-field" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <VBox VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" prefHeight="116.0" prefWidth="309.0">
                           <children>
                              <JFXButton onAction="#onSignUp" prefHeight="46.0" prefWidth="178.0" styleClass="jfxbutton" text="Đăng ký" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets left="30.0" right="30.0" top="20.0" />
               </padding>
            </VBox>
            <VBox fx:id="signInVBox" alignment="CENTER" layoutX="438.0" layoutY="130.0" maxHeight="440.0" style="-fx-background-color: #1c1c1cba; -fx-background-radius: 7px;">
               <children>
                  <Label text="Đăng nhập" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="40.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <FontAwesomeIconView fill="WHITE" glyphName="USER" size="2em">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </FontAwesomeIconView>
                        <JFXTextField fx:id="usernameSignInJFX" focusColor="WHITE" labelFloat="true" prefWidth="250.0" promptText="Tên tài khoản" styleClass="jfx-text-field" unFocusColor="WHITE">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </JFXTextField>
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <FontAwesomeIconView fill="WHITE" glyphName="KEY" size="2em">
                           <HBox.margin>
                              <Insets top="10.0" />
                           </HBox.margin>
                        </FontAwesomeIconView>
                        <JFXPasswordField fx:id="passwordSignInJFX" prefWidth="250.0" promptText="Mật khẩu" styleClass="jfx-password-field" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Label onMouseClicked="#onForgotPassword" styleClass="label-style" text="Quên mật khẩu?" />
                     </children>
                  </HBox>
                  <VBox VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" prefHeight="83.0" prefWidth="309.0">
                           <children>
                              <JFXButton onAction="#onSignIn" prefHeight="46.0" prefWidth="178.0" styleClass="jfxbutton" text="Đăng nhập" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="83.0" prefWidth="309.0" spacing="5.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Bạn chưa có tài khoản?">
                                 <font>
                                    <Font size="17.0" />
                                 </font>
                              </Text>
                              <Text fill="WHITE" onMouseClicked="#onOpenSignUpPane" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text1" text="Đăng kí ngay">
                                 <font>
                                    <Font name="System Italic" size="17.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets left="30.0" right="30.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
